.account-page
  %h2 アカウントの作成
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .field
      .field-input
        = f.text_field :name, autofocus: true, placeholder: 'ユーザーネーム'
    .field
      .field-input
        = f.email_field :email, placeholder: 'メールアドレス'
    .field
      .field-input
        = f.password_field :password, autocomplete: "off", placeholder: 'パスワード'
    .field
      .field-input
        = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'パスワード確認'
    .actions
      = f.submit "サインアップ"
  = render "devise/shared/links"
