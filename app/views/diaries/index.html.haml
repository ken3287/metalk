.home
  .home__up
    .home__up_notice
      .home__up_notice_box
        - flash.each do |key, value|
          = content_tag :div, value, class: 'home__up_notice_text'
    .home__up_search
    .home__up_signout
      = link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "home__up_signout__text"
    .home__up_post
      = link_to '日記を書く', new_user_diary_path(current_user.id), method: :get, class: "home__up_post__link"

  .home-main
    = render partial: 'posts/home'

    .home-main__diary
      = render partial: 'diary'
